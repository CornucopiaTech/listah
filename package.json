{
  "name": "listah",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/KelechiBerquist/listah.git",
  "author": "KelechiBerquist <kelechi@berquist.tech>",
  "license": "MIT",
  "type": "module",
  "prisma": {
    "schema": "./infra/prisma/schema"
  },
  "scripts": {
    "api:dev": "clear && source .env.dev && cd ./apps/api && nodemon -e go --watch '*.go' --watch '../../internal/**/**/*.go' --signal SIGTERM --exec 'go' run .",
    "api:lint": "clear && WK_DIR=\"$(pwd)\" && echo $WK_DIR && cd \"$WK_DIR/apps/api/\" && golangci-lint run  && cd \"$WK_DIR/internal\" && golangci-lint run",
    "api:tidy": "WK_DIR=\"$(pwd)\" && echo $WK_DIR && cd \"$WK_DIR/apps/api/\" && go mod tidy  && cd \"$WK_DIR/internal\" && go mod tidy",
    "buf:gen": "clear && rm -rf ./internal/pkg/proto && buf generate",
    "buf:lint": "buf lint",
    "buf:prune": "buf dep prune",
    "buf:update": "buf dep update",
    "docs:gen": "clear && rm ./apps/api/public/index.html && redocly bundle --dereferenced --output ./assets/docs/openapi-deref.yaml ./assets/docs/openapi-ref.yaml   &&   npx @redocly/cli build-docs  ./assets/docs/openapi-deref.yaml --title Listah --output ./apps/api/public/index.html  ",
    "docker:rm-all": "docker rm $(docker ps -a -q)",
    "docker:stop-all": "docker stop $(docker ps -a -q)",
    "web:refresh-dev": "clear && cd ./apps/web && rm -rf .next .clerk .tanstack node_modules/.vite* ",
    "web:dev": "clear && cd ./apps/web && npm run dev ",
    "web:lint": "clear && cd ./apps/web && npx eslint . --fix"
  },
  "dependencies": {
    "@bufbuild/buf": "^1.53.0",
    "@dataconnect/generated": "file:src/dataconnect-generated",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@faker-js/faker": "^9.9.0",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@mui/x-date-pickers": "^8.11.0",
    "@radix-ui/themes": "^3.2.1",
    "@redocly/cli": "^2.14.5",
    "@tanstack/react-router": "^1.131.31",
    "@tanstack/react-router-devtools": "^1.131.31",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.2",
    "firebase-tools": "^15.1.0",
    "nodemon": "^3.1.10",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "uuid": "^11.1.0",
    "vite": "^7.1.3",
    "zod": "^4.1.5",
    "zustand": "^5.0.8"
  },
  "packageManager": "npm@10.9.0",
  "devDependencies": {
    "@tanstack/router-plugin": "^1.131.31",
    "nodemon": "^3.1.10",
    "prisma": "^6.7.0"
  }
}
